{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "minimumReleaseAge": "3 days",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "packageRules": [
    {
      "description": "Group Kubernetes dependencies together",
      "groupName": "kubernetes",
      "matchPackageNames": [
        "k8s.io/{/,}**"
      ]
    },
    {
      "description": "Group test framework dependencies",
      "groupName": "test-frameworks",
      "matchPackageNames": [
        "/github.com/onsi/ginkgo/",
        "/github.com/onsi/gomega/",
        "/github.com/stretchr/testify/"
      ]
    }
  ],
  "gomod": {
    "enabled": true
  },
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "ignorePaths": [
    "**/vendor/**"
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  }
}
